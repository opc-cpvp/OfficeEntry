    {
      "name": "page2",
      "elements": [
        {
          "type": "boolean",
          "name": "registerVisitors",
          "title": {
            "default": "Do you need to register visitors?",
            "fr": "Avez-vous besoin d'inscrire des visiteurs?"
          },
          "defaultValue": "false",
